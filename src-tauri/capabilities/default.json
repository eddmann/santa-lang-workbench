{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for santa-lang Workbench",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.github.com/*" },
        { "url": "https://github.com/*" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$HOME/**",
        "**"
      ]
    }
  ]
}
